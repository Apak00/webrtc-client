{
  "name": "app-name",
  "version": "1.0.0",
  "description": "Web RTC app",
  "author": "Mahmud Apak",
  "license": "ISC",
  "main": "./main.js",
  "scripts": {
    "start": "webpack serve --mode development",
    "build": "webpack --mode production",
    "build:electron": "webpack --env electron --mode production --target=electron-renderer",
    "serve": "node server.js",
    "lint": "eslint . --ext jsx,ts,tsx",
    "electron": "electron .",
    "start:electron": "cross-env APP_ENV=dev concurrently \"npm run start\" \"wait-on http://localhost:8080 && electron .\"",
    "installers": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "engines": {
    "node": "v14.16.0"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "electron": "^12.0.9",
    "express": "^4.17.1",
    "is-electron": "^2.2.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "socket.io-client": "^4.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.13.16",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@types/react-dom": "^17.0.3",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.4.1",
    "@typescript-eslint/parser": "^4.23.0",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.1.0",
    "css-loader": "^5.2.4",
    "electron-builder": "^22.11.3",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-compat": "^3.9.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "prettier": "^2.3.0",
    "style-loader": "^2.0.0",
    "ts-loader": "^9.1.1",
    "typescript": "^4.2.4",
    "wait-on": "^5.3.0",
    "webpack": "^5.35.1",
    "webpack-cli": "^4.6.0",
    "webpack-dev-server": "^3.11.2"
  },
  "build": {
    "appId": "app.id",
    "mac": {
      "category": "your.app.category.type"
    },
    "directories": {
      "output": "installers"
    }
  }
}
